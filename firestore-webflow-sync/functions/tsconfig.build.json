{
  "compilerOptions": {
    "noUnusedLocals": true,
    "outDir": "lib",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest", "@types/jest"]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"]
}
